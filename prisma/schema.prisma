generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id   String @id @default(uuid())
  name String
}

model User {
  id               String             @id @default(uuid())
  email            String             @unique
  password         String
  name             String
  lastName         String
  address          String?
  productsComments ProductsComments[]
  createdAt        DateTime           @default(now())
}

model Category {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  img_src     String
  products    Products[]
}

enum Currency {
  USD
  UYU
}

model Products {
  id          Int                @id @default(autoincrement())
  name        String
  description String
  cost        Int
  currency    Currency
  soldCount   Int
  image       String[]
  categoryId  Int
  catName     Category           @relation(fields: [categoryId], references: [id])
  comments    ProductsComments[] @relation("ProductComments")
}

model ProductsComments {
  id          Int      @id @default(autoincrement())
  score       Int
  description String
  userId      String?
  user        User?     @relation(fields: [userId], references: [id])
  productId   Int
  dateTime    DateTime @default(now())
  product     Products @relation("ProductComments", fields: [productId], references: [id])
}
